<div class="sliderBoxProducts">
    <div id="button_Left_Slider1">
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
    </div>
    <div class="sliderProducts">
        <% sliderProducts.forEach(productSlider => { %>
            <% if (productSlider.onsale) { %>
                <div class="productRecommended">
                    <a href="/productos/<%= productSlider.Category.categorylink %>/<%= productSlider.Subcategory.subcategorylink %>/<%= productSlider.id %>">
                        <img src="/images/products/<%= productSlider.image0 %>">
                        <div class="productRecommendedDescription">
                            <p><%= productSlider.name %></p>
                            <% if (productSlider.discount === 0) { %>
                                <p>$<%= toThousand(productSlider.price) %></p>
                            <% } else { %>
                                <p>$<%= toThousand(productSlider.price - ((productSlider.price * productSlider.discount)/100)) %></p>
                            <% } %>
                            <button>Ver Producto</button>
                        </div>
                    </a>
                </div>
            <% } %>
        <% }) %>
    </div>
    <div id="button_Right_Slider1">
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
    </div>
</div>