<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs' ,{title: 'Editar Perfil - '}) %>
<body class="background_Leaves">
  <div class="container_Page">
    <%- include('../partials/header.ejs') %> 
<main class="profile">
    <div class="form-container">
        <h2>Editar mi perfil</h2>
        <hr>
      <form action="/perfil/<%=user.id %>?_method=PUT" method="POST"
                <div class="profile-form">
                    
                    <div class="profile-box">
                        <h4 class="profile-subtitle">Datos personales</h4>
                        
                        <div class="input-container">
                            <input class="input-style" type="text" name="name" placeholder="nombre"
                            value="<%= user.name ? user.name : "" %>">
                            <% if (locals.errors && errors.name) { %>
                                <small class="error-message"><%= errors.name.msg %></small>
                            <% } %>

                        </div>

                        <div class="input-container">
                            <input class="input-style" type="text" name="surname" placeholder="Apellido"value="<%= user.surname ? user.surname : "" %>">
                            <% if (locals.errors && errors.surname) { %>
                                <small class="error-message"><%= errors.surname.msg %></small>
                            <% } %>
                            
                        </div>
                        <div class="input-container">
                                <input class="input-style" type="email" name="email" placeholder="Ingrese su email" readonly value="<%= user.email %>">
                                <% if (locals.errors && errors.email) { %>
                                    <small class="error-message"><%= errors.email.msg %></small>
                                <% } %>
                            </div>
                            
                         
                            <div class="input-container">
                                <input class="input-style" type="number" name="dni" placeholder="DNI"value=<%= user.dni ? user.dni : "" %>
                                
                            </div>
                    </div>
                    <div class="profile-box">
                        <h4 class="profile-subtitle">Datos de contacto</h4>
                        <div class="input-container">
                            <input class="input-style" type="tel" name="phone" placeholder="Teléfono"value="<%= user.phone ? user.phone : "" %>">
                            <% if (locals.errors && errors.phone) { %>
                                <small class="error-message"><%= errors.phone.msg %></small>
                            <% } %>
                        </div>
                      <div class="input-container">
                           <select name="provincia" class="input-select">
                               <option value="" hidden selected>Elija una provincia</option>
                               <option value="laRioja">La Rioja</option>
                               <option value="chaco">Chaco</option>
                               <option value="cordoba">Córdoba</option>
                               <option value="misiones">Misiones</option>
                               <option value="chubut">Chubut</option>
                           </select>
                        </div>
                        <div class="input-container">
                            <select name="localidad" class="input-select">
                                <option value="" hidden selected>Elija una localidad</option>
                                <option value="localidad1">Localidad1</option>
                                <option value="localidad2">Localidad2</option>
                                <option value="localidad3">Localidad3</option>
                                <option value="localidad4">Localidad4</option>
                                <option value="localidad5">Localidad5</option>
                            </select>
                        </div>
                        <div class="input-container">
                            <input class="input-style" type="text" name="address" placeholder="Direccion"value="<%= user.address ? user.address : "" %>">
                            <% if (locals.errors && errors.address) { %>
                                <small class="error-message"><%= errors.address.msg %></small>
                            <% } %>
                        </div>
                    </div>
                </div> 
                <div class="button-container">
                    <!-- <button type="reset" class="btn btn-reset">Reset</button> -->
                    <button type="submit" class="btn btn-edit">Guardar</button>
                </div> 
            </form>
    </div>
</main>
    <%- include('../partials/footer.ejs') %> 
</html>